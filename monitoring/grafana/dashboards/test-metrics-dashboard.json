{
  "dashboard": {
    "title": "üß™ FastFoodDrone Test Metrics",
    "tags": ["test", "metrics", "fastfood"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-7d",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "üìä Total Tests",
        "type": "stat",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "test_count_total",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "blue", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          },
          "overrides": []
        }
      },
      {
        "id": 2,
        "title": "‚úÖ Passed Tests",
        "type": "stat",
        "gridPos": {
          "x": 6,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "test_pass_count",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": 0}
              ]
            }
          },
          "overrides": []
        }
      },
      {
        "id": 3,
        "title": "‚ùå Failed Tests",
        "type": "stat",
        "gridPos": {
          "x": 12,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "test_fail_count",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          },
          "overrides": []
        }
      },
      {
        "id": 4,
        "title": "üìà Pass Rate",
        "type": "gauge",
        "gridPos": {
          "x": 18,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "test_pass_rate_percent",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "mappings": [],
            "max": 100,
            "min": 0,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": 0},
                {"color": "orange", "value": 50},
                {"color": "green", "value": 90}
              ]
            },
            "unit": "percent"
          },
          "overrides": []
        }
      },
      {
        "id": 5,
        "title": "‚è±Ô∏è Test Execution Time",
        "type": "stat",
        "gridPos": {
          "x": 0,
          "y": 4,
          "w": 8,
          "h": 4
        },
        "targets": [
          {
            "expr": "test_execution_time_seconds",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": 0}
              ]
            },
            "unit": "s"
          },
          "overrides": []
        }
      },
      {
        "id": 6,
        "title": "üéØ Test Count by Service",
        "type": "bargauge",
        "gridPos": {
          "x": 8,
          "y": 4,
          "w": 16,
          "h": 8
        },
        "targets": [
          {
            "expr": "test_count_by_service",
            "refId": "A",
            "legendFormat": "{{service}}"
          }
        ],
        "options": {
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "blue", "value": 0}
              ]
            }
          },
          "overrides": []
        }
      },
      {
        "id": 7,
        "title": "üìä Pass Rate by Service",
        "type": "piechart",
        "gridPos": {
          "x": 0,
          "y": 8,
          "w": 8,
          "h": 8
        },
        "targets": [
          {
            "expr": "test_pass_rate_by_service",
            "refId": "A",
            "legendFormat": "{{service}}"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "pieType": "pie",
          "tooltip": {
            "mode": "single"
          }
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "hideFrom": {
                "tooltip": false,
                "viz": false,
                "legend": false
              }
            },
            "mappings": []
          },
          "overrides": []
        }
      }
    ]
  }
}
